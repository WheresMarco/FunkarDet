<div class="col-md-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">New date</h3>
    </div>
    <div class="panel-body">
      <%= bootstrap_form_for [@group, @group_date] do |form| %>
        <%= form.text_field :name %>
        <%= form.text_field :place %>
        <%= form.datetime_select :from_date %>
        <%= form.datetime_select :to_date %>
        <%= form.text_area :description %>

        <%= form.submit "Save" %>
      <% end %>
    </div>
  </div>
</div>
