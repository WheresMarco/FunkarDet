<div class="col-md-4 col-md-offset-4">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%=t 'select-user.title' %></h3>
    </div>
    <div class="panel-body">
      <div class="select-user-form">
        <%= bootstrap_form_tag url: select_user_post_path do |f| %><br />
          <%= f.label :group_member, t('select-user.username') %>:
          <%= select("group_member", "", GroupMember.where(group_id: @groups_users.group_id).order(:name).collect {|p| [ p.name, p.id ] }) %><br /><br />

          <%= f.submit t('select-user.submit') %>
        <% end %>
      </div>

      <p><%=t 'select-user.help-text.html' %></p>
    </div>
  </div>
</div>
