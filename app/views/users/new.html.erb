<div class="col-md-7">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%=t 'signup.signup-box.title' %></h3>
    </div>
    <div class="panel-body">
      <%= bootstrap_form_for(@user, layout: :horizontal) do |f| %>
        <%= f.text_field :username, label: t('signup.signup-box.username') %>
        <%= f.text_field :email, label: t('signup.signup-box.email') %>
        <%= f.password_field :password, label: t('signup.signup-box.password') %>
        <%= f.password_field :password_confirmation, label: t('signup.signup-box.password-confirmation') %>

        <hr>

        <%= f.fields_for :groups do |builder| %>
          <div class="field">
            <%= builder.text_field :name, label: t('signup.signup-box.groupname') %>
          </div>
        <% end %>

        <hr>

        <div class="form-group">
         <label class="control-label col-sm-2" for="group_username"><%=t 'signup.signup-box.group-username' %></label>
         <div class="col-sm-10">
           <input class="form-control" id="group_username" name="group[username]" type="text" />
         </div>
        </div>

        <div class="form-group">
         <label class="control-label col-sm-2" for="group_password"><%=t 'signup.signup-box.group-password' %></label>
         <div class="col-sm-10">
           <input class="form-control" id="group_password" name="group[password]" type="password" />
         </div>
        </div>

        <div class="form-group">
         <label class="control-label col-sm-2" for="group_password_confirmation"><%=t 'signup.signup-box.group-password-confirmation' %></label>
         <div class="col-sm-10">
           <input class="form-control" id="group_password_confirmation" name="group[password_confirmation]" type="password" />
         </div>
        </div>

        <%= f.form_group do %>
          <%= f.submit t('signup.signup-box.submit') %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<div class="col-md-5">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%=t 'signup.help-box.title' %></h3>
    </div>
    <div class="panel-body">
      <%=t 'signup.help-box.text.html' %>
    </div>
  </div>
</div>
