<h1>Register for Funkar det</h1>

<%= simple_form_for(@user, html: {class: 'form-horizontal' }) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :username %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation, required: true %>

  <hr>

  <%= f.simple_fields_for :groups do |builder| %>
    <div class="field">
      <%= builder.input :name, label: 'Groupname' %>
    </div>
  <% end %>

  <hr>
  <div class="field">
    <label for="group_username">Group username</label><br>
    <%= text_field_tag "group[username]" %>
  </div>

  <div class="field">
    <label for="group_password">Group password</label><br>
    <%= password_field_tag "group[password]" %>
  </div>

  <div class="field">
    <label for="group_password_confirmation">Group password (again)</label><br>
    <%= password_field_tag "group[password_confirmation]" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign Up" %>
  </div>
<% end %>

<%= link_to 'Back', users_path %>
