<div class="col-md-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">New member</h3>
    </div>
    <div class="panel-body">
      <%= bootstrap_form_for [@group, @group_member] do |form| %>
        <%= form.text_field :name %>
        <%= form.text_field :email %>

        <%= form.submit "Save" %>

      <% end %>
    </div>
  </div>
</div>
