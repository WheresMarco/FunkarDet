<div class="col-md-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%=t 'new-member.new-box.title' %></h3>
    </div>
    <div class="panel-body">
      <%= bootstrap_form_for [@group, @group_member] do |form| %>
        <%= form.text_field :name, label: t('new-member.new-box.name') %>
        <%= form.text_field :email, label: t('new-member.new-box.email') %>

        <%= form.submit t('new-member.new-box.submit') %>
      <% end %>
    </div>
  </div>
</div>
